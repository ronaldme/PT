@page
@model UserModel
@{
    ViewData["Title"] = "User";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        @if (Model.Name == null)
        {
            <form method="post">
                @Html.HiddenFor(m => m.AspNetUsersId)

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="@nameof(Model.Name)" value="@User.Identity.Name">
                </div>

                <div class="form-group">
                    <label>Telegram ChatId</label>
                    <input type="text" class="form-control" name="@nameof(Model.TelegramChatId)">
                </div>
                <Button class="btn btn-default" asp-page-handler="Create">Create PT user</Button>
            </form>
        }
        else
        {
            <form method="post">
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="@nameof(Model.Name)" value="@Model.Name">
                </div>

                <div class="form-group">
                    <label>Telegram ChatId</label>
                    <input type="text" class="form-control" name="@nameof(Model.TelegramChatId)" value="@Model.TelegramChatId">
                </div>
                <Button class="btn btn-default"  asp-page-handler="Update">Update PT user</Button>
            </form>
        }
    </div>
</div>