@model PT.Web.Features.Workouts.WorkoutIndexViewModel

@{
    ViewBag.Title = "Scheduled workouts";
    Layout = "_Layout";
}

<h2>Scheduled workouts</h2>

<table class="table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Workout</th>
        <th>Finished</th>
        <th>Actions</th>
    </tr>
    </thead>
    
    @foreach (var workouts in Model.PagedList)
    {
        <tbody>
        <tr>
            <td>@workouts.Date.ToShortDateString()</td>
            <td>@workouts.WorkoutType.Name</td>
            <td>@workouts.Finished</td>
            <td>Delete / Edit</td>
        </tr>
        </tbody>
    }
</table>
